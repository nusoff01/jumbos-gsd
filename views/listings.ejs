<!doctype html>
<html>
<head>
	<title>View Listings</title>
	<link href="../javascripts/vendor/jquery-ui/css/custom-theme/jquery-ui-1.9.2.css" rel="stylesheet">
</head>
<body>
<a href="/">Home</a> <a href="/profile">Profile</a>

	<h1>View all Listings</h1>

	<div>
		Find Title:<input id="titles" />
	</div>

	<table>
		<thead>
			<tr>
				<th>book name</th>
				<th>edition</th>
				<th>condition</th>
				<th>price</th>
			</tr>
		</thead>
		<tbody>
			<% for(var i=0; i<listings.length; i++) { %>
        		<tr>
            		<td> <%= listings[i].book.name%> </td>
            		<td> <%= listings[i].edition%> </td>
            		<td> <%= listings[i].condition%> </td>
            		<td> $<%= listings[i].price%> </td>
        		</tr>
    		<% } %>
		</tbody>
	</table>



	<% for(var i=0; i<listings.length; i++) { %>
        <h3>
            Name of book: <%= listings[i].book.name%> | Seller: <%= listings[i].seller%> | Price: <%= listings[i].price%>
        </h3>
    <% } %>
</body>
<script type="text/javascript" src="../javascripts/vendor/jquery-ui/js/jquery-1.8.3.js" ></script>
<script type="text/javascript" src="../javascripts/vendor/jquery-ui/js/jquery-ui-1.9.2.min.js"></script>
<script type="text/javascript">
	$(function() {
	var titles = [];
	var list = <%- JSON.stringify(listings) %>;
	
	for (var i = 0; i < list.length; i++) {
	 	titles.push( list[i].book.name );
	}

	$("#titles").autocomplete({source: titles});
	});
</script>
</html>