<body>
	<div class="header">
	    <div class="home-menu pure-menu pure-menu-open pure-menu-horizontal pure-menu-fixed">
	        <a class="pure-menu-heading" href="">P2PText</a>
	    </div>
	</div>

	<div class="splash-container">
	    <div class="splash">
	        <h1 class="splash-head">Peer-to-Peer Text: Tufts</h1>
	        <p class="splash-subhead">
	            A convenient textbook exchange network which cuts out the middle man.
	        </p>
	        <p>
	            <button class="pure-button pure-button-primary" id="signup-butn">Sign Up</button>
	            <button class="pure-button pure-button-primary" id="login-butn">Login</button>
	        </p>
	    </div>
	</div>





	<div class="content-wrapper">
		<div class="content-head" id="login">
			<form class="pure-form pure-form-aligned" action="/login" method="post">
				<fieldset>
					<legend>Login</legend>
					<div class="pure-control-group">
						<label>Email</label>
						<input type="text" class="form-control" name="email" />
					</div>
					<div class="pure-control-group">
						<label>Password</label>
						<input type="password" class="form-control" name="password"/>
					</div>
					<button type="submit" class="pure-button pure-button-primary">Login</button>
				</fieldset>
			</form>
		</div>


		<div class="content-head" id="signup">
			<form class="pure-form pure-form-aligned" action="/signup" method="post">
				<fieldset>
					<legend>Sign up to be a part of Peer-to-Peer Text: Tufts</legend>
					<div class="pure-control-group">
						<label>Username</label>
						<input type="text" class="form-control" name="userName" />
					</div>	
					<div class="pure-control-group">
						<label>Email</label>
						<input type="text" class="form-control" name="email" />
					</div>
					<div class="pure-control-group">
						<label>Password</label>
						<input type="password" class="form-control" name="password"/>
					</div>
					<button type="submit" class="pure-button pure-button-primary">Signup</button>
				</fieldset>
			</form>
		</div>
	</div>
</body>
